<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">

    <!--    <ScrollView-->
    <!--        android:id="@+id/scrollView2"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_marginStart="16dp"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent">-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/esc_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_end_margin"
                        android:layout_weight="1"
                        android:text="Esc"
                        android:textColor="@color/design_default_color_surface"
                        android:textSize="@dimen/btn_text_size" />

                    <Button
                        android:id="@+id/delete_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_end_margin"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:textSize="@dimen/btn_text_size" />

                    <Button
                        android:id="@+id/up_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_end_margin"
                        android:layout_weight="1"
                        android:text="^"
                        android:textSize="@dimen/btn_text_size" />

                    <Button
                        android:id="@+id/enter_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_end_margin"
                        android:layout_weight="1"
                        android:text="Enter"
                        android:textSize="@dimen/btn_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/tab_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_end_margin"
                        android:layout_weight="1"
                        android:text="Tab"
                        android:textSize="@dimen/btn_text_size" />

                    <Button
                        android:id="@+id/left_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_end_margin"
                        android:layout_weight="1"
                        android:text="&lt;"
                        android:textSize="@dimen/btn_text_size" />

                    <Button
                        android:id="@+id/down_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_end_margin"
                        android:layout_weight="1"
                        android:text="v"
                        android:textSize="@dimen/btn_text_size" />

                    <Button
                        android:id="@+id/right_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_end_margin"
                        android:layout_weight="1"
                        android:text="&gt;"
                        android:textSize="@dimen/btn_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <Switch
                        android:id="@+id/win_switch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Win"
                        android:textSize="@dimen/btn_text_size" />

                    <Switch
                        android:id="@+id/drag_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Drag"
                        android:textSize="@dimen/btn_text_size" />

                    <Switch
                        android:id="@+id/shift_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Shift"
                        android:textSize="@dimen/btn_text_size" />

                    <Switch
                        android:id="@+id/alt_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alt"
                        android:textSize="@dimen/btn_text_size" />

                    <Switch
                        android:id="@+id/ctrl_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ctrl"
                        android:textSize="@dimen/btn_text_size" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:layout_above="@+id/button_box"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="@dimen/cardview_default_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mouse_pad_container"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/mouse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:id="@+id/fn_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/f1_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F1"
                            android:textSize="@dimen/btn_text_size" />

                        <Button
                            android:id="@+id/f2_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F2"
                            android:textSize="@dimen/btn_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/f3_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F3"
                            android:textSize="@dimen/btn_text_size" />

                        <Button
                            android:id="@+id/f4_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F4"
                            android:textSize="@dimen/btn_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/f5_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F5"
                            android:textSize="@dimen/btn_text_size" />

                        <Button
                            android:id="@+id/f6_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F6"
                            android:textSize="@dimen/btn_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/f7_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F7"
                            android:textSize="@dimen/btn_text_size" />

                        <Button
                            android:id="@+id/f8_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F8"
                            android:textSize="@dimen/btn_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/f9_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F9"
                            android:textSize="@dimen/btn_text_size" />

                        <Button
                            android:id="@+id/f10_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F10"
                            android:textSize="@dimen/btn_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/f11_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F11"
                            android:textSize="@dimen/btn_text_size" />

                        <Button
                            android:id="@+id/f12_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="F12"
                            android:textSize="@dimen/btn_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <Switch
                            android:id="@+id/fn_switch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="Fn"
                            android:textSize="@dimen/btn_text_size" />

                        <Button
                            android:id="@+id/insert_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/button_end_margin"
                            android:layout_marginEnd="@dimen/button_end_margin"
                            android:layout_weight="1"
                            android:text="Ins"
                            android:textSize="@dimen/btn_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="4dp"
            android:weightSum="13">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/up_drawer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="center"
                android:src="@drawable/arrow_up" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <EditText
                android:id="@+id/inputText"
                android:layout_width="@dimen/keyboard_icon_width"
                android:layout_height="@dimen/keyboard_icon_height"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@drawable/keyboard"
                android:cursorVisible="false"
                android:inputType="text"
                android:textColor="@android:color/transparent" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/side_drawer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <!--    </ScrollView>-->

</androidx.constraintlayout.widget.ConstraintLayout>